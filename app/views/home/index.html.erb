<div class = "column">
  <h2>Top Movies</h2>
  <% @movies.each do |movie| %>
     <h3><%= link_to movie.title, movie_path(movie.id) %></h3>
     <p>Ranked <%= movie.votes %></p>
  <% end %>
</div>

