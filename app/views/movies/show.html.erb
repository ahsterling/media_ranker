
<div class = "row">
  <div class = "show col-md-12">
    <h2><%= @movie.title %><small> Ranking: <%= @movie.votes %></small></h2>
    <hr>
  </div>
</div>
<div class = "row">
  <div class = "show col-md-8">
    <%= image_tag "#{@movie.imageurl}", class: "img-rounded img-responsive" %>
    <h3>Directed by: <%= @movie.director %></h3>
    <p> <%= @movie.description %></p>

  </div>
  <div class = "show buttons col-md-4">
    <p>
      <%= form_for @movie, method: :patch, action: edit_movie_path(@movie.id) do |f| %>
        <%= f.hidden_field :votes, value: (@movie.votes += 1) %>
        <%= f.submit "Upvote", class: "btn btn-primary" %>
      <% end %>
    </p>

    <p><%= button_to "Edit #{@movie.title}", edit_movie_path(@movie.id), method: :get, class: "btn btn-sm btn-default" %></p>
    <p><%= button_to "Delete #{@movie.title}", movie_path(@movie.id), method: :delete, class: "btn btn-sm btn-danger" %></p>

    <p><%= link_to "View All Movies", movies_path, class: "btn btn-sm btn-default" %></p>
    <p><%= link_to "View All Media", root_path, class: "btn btn-sm btn-default" %></p>
    </p>
  </div>
</div>
