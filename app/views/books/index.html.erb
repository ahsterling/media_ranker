<h2>All Books</h2>

<table class = "table">
  <tr>
    <td><h3>Ranking</h3></td>
    <td><h3>Name</h3></td>
    <td><h3>Upvote</h3></td>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><h5>Ranked: <%= book.votes %></h5></td>
      <td><h5><%= link_to book.title, book_path(book.id) %></h5></td>
      <td>
        <%= form_for book, method: :patch, action: edit_book_path(book.id) do |f| %>
          <%= f.hidden_field :votes, value: (book.votes += 1) %>
          <%= f.submit "Upvote", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Add a Book", new_book_path, class: "btn btn-default" %>
