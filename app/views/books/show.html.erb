<div class = "row">
  <div class = "show col-md-12">
    <h2><%= @book.title %> <small>Ranking: <%= @book.votes %></small></h2>
    <hr>
  </div>
</div>
<div class = "row">
  <div class = "col-md-7">
    <%= image_tag "#{@book.imageurl}", class: "img-rounded img-responsive" %>
    <h3>Directed by: <%= @book.author %></h3>
    <p> <%= @book.description %></p>
  </div>
  <div class = "col-md-5">
    <p>
      <%= form_for @book, method: :patch, action: edit_book_path(@book.id) do |f| %>
        <%= f.hidden_field :votes, value: (@book.votes += 1) %>
        <%= f.submit "Upvote", class: "btn btn-sm btn-primary" %>
      <% end %>
    </p>

    <p><%= button_to "Edit #{@book.button_title}", edit_book_path(@book.id), method: :get, class: "btn btn-sm btn-default" %></p>
    <p><%= button_to "Delete #{@book.button_title}", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" %></p>

    <p><%= link_to "View All Books", books_path, class: "btn btn-sm btn-default" %></p>
    <p><%= link_to "View All Media", root_path, class: "btn btn-sm btn-default" %></p>
  </div>
</div> <!-- Column -->
