<h2>Edit <%= @book.title %></h2>

<%= form_for @book, method: :patch, url: book_path(@book.id) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Update #{@book.title}" %>
<% end %>
