<h2>All Albums</h2>

<table class = "table">
  <tr>
    <td><strong>Ranking</strong></td>
    <td><strong>Name</strong></td>
    <td><strong>Upvote</strong></td>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td>Ranked: <%= album.votes %></td>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td>
        <%= form_for album, method: :patch, action: edit_album_path(album.id) do |f| %>
          <%= f.hidden_field :votes, value: (album.votes += 1) %>
          <%= f.submit "Upvote", class: "btn btn-default" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>


<%= link_to "Add an Album", new_album_path, class: "btn btn-default" %>
