<h2>All Albums</h2>

<% @albums.each do |album| %>
   <h3><%= link_to album.title, album_path(album.id)%></h3>
   <p><%= album.artist %></p>
   <p><%= album.description %></p>
   <p><%= album.votes %></p>

   <%= form_for album, method: :patch, action: edit_album_path(album.id) do |f| %>
     <%= f.hidden_field :votes, value: (album.votes += 1) %>
     <%= f.submit "Upvote" %>
   <% end %>

<% end %>

<%= link_to "Add an Album", new_album_path %>
