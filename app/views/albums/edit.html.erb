<h2>Edit <%= @album.title %></h2>

<%= form_for @album, method: :patch, url: album_path(@album.id) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Update #{@album.title}" %>
<% end %>
